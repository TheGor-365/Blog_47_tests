<div class="container p-5 border rounded bg-light col-md-6">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'form-label' %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control mb-3', autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'form-label' %><br />
      <%= f.password_field :password, class: 'form-control mb-3', autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'btn btn-primary mt-3' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
